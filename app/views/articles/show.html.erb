<div class="container article">
  <h1>
    <%= @article.title %><br>
    <%= link_to edit_article_path(@article) do %>
      <i class="fa fa-pencil"></i>
    <% end %>
    <%= link_to article_path(@article), method: :delete do %>
      <i class="fa fa-trash"></i>
    <% end %>
  </h1>
  <p><%= @article.content %></p>
  <%= link_to 'Back to articles', articles_path %>
</div>
